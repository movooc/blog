body {
  .sweet-alert{
    width: 300px;
    h2 {
      font-weight: normal;
    }
    .sa-button-container {
      margin-top: 10px;
      border-top: 1px solid #e6eaf2;
      font-size: 0;
      .cancel {
        margin: 0;
        margin-top: 15px;
        width: 100%;
      }
      .sa-confirm-button-container {
        display: -webkit-box;
        display: box;
        button {
          display: block !important;
          -webkit-box-flex: 1;
          box-flex: 1;
          margin: 15px 0 0;
        }
      }
    }
    fieldset {
      margin: 0;
      padding: 0;
    }
  }
}

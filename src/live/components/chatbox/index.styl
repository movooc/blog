@import '~@lib/css/index.styl';

.l-chatbox
  position: fixed;
  display: -webkit-flex;
  display: flex;
  bottom: 0;
  right: 0;
  left: 0;
  padding: 15px 20px 15px 34px;
  //height: 70px;
  box-shadow: 0 0 5px rgba(0,0,0,.1);
  background: #ECEDF1;
  z-index: 10;
  >*
    -webkit-flex: 1;
    flex: 1;
    border: 0 none;
    height: 70px;
    px2px(border-radius, 8px);
    px2px(font-size, 30px);

    &.box-more
      margin-right: 8px;
      text-align: center;
      button
        width: 70px;
        height: 100%;
        border: 0 none;
        background: #fff;
        px2px(border-radius, 8px);
      .iconfont
        color: #12B7F5;
        px2px(font-size, 30px);
    &.box-msg
      position: relative;
      -webkit-flex: 5;
      flex: 5;
      color: #333;
      overflow: auto;
      overflow-x: hidden;
      resize: none;

      textarea
        position: relative;
        width: 100%;
        height: 30px;
        padding: 20px 10px;
        border: 0 none;
        px2px(border-radius, 8px);
        px2px(line-height, 30px);
        px2px(font-size, 30px);
      .iconfont
        position: absolute;
        padding-right: 10px;
        color: #ddd;
        z-index: 6;
        px2px(top, 5px);
        px2px(bottom, 0px);
        px2px(right, 0px);
        px2px(font-size, 50px);
        &.start
          color: red;
    &.box-send
      margin-left: 20px;
      background: #fff;

  .more-choice {
    position: absolute;
    width: 100%;
    background: #fff;
    px2px(left, 0px);
    px2px(bottom, 96px);

    li, button {
      width: 100%;
      height: 100%;
      border: 0 none;
      background: #12b7f5;
      color: #fff;
      px2px(font-size, 30px)
    }
  }

.modal-dialog
  position: absolute;
  px2px(top, -500px);
  left: 0;
  right: 0;
  bottom: 0;
  height: 500px;
  background: rgba(0,0,0,50);
  z-index: 10;
  px2px(font-size, 50px);

  input[type="file"], .upload
    px2px(font-size, 32px);

@import '~@lib/css/index.styl';

.l-chatbox
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  padding: 15px 20px 15px 20px;
  box-shadow: 0 0 5px rgba(0,0,0,.1);
  background: #fff;
  z-index: 10;
  .box
    display: -webkit-flex;
    display: flex;
    width: 100%;

    >*
      -webkit-flex: 1;
      flex: 1;
      border: 0 none;
      height: 70px;
      px2px(border-radius, 8px);
      px2px(font-size, 30px);

      &.box-more
        margin-left: -15px;
        text-align: center;
        button
          width: 70px;
          height: 100%;
          border: 0 none;
          background: transparent;
          border: 1px solid #12B7F5;
          px2px(border-radius, 50%);
        .iconfont
          color: #12B7F5;
          px2px(font-size, 40px);
      &.box-msg
        position: relative;
        -webkit-flex: 5;
        flex: 5;
        color: #333;
        overflow: auto;
        overflow-x: hidden;
        border: 1px solid #E6EAF2;
        &.is-finish
          visibility: hidden;
        &.c-finish
          button
            background: #aaa;

        textarea, input
          position: relative;
          width: 100%;
          height: 28px;
          padding: 20px 10px;
          border: 0 none;
          resize: none;

          px2px(border-radius, 8px);
          px2px(line-height, 30px);
          px2px(font-size, 30px);
        .reorder
          position: absolute;
          padding-right: 10px;
          color: #ddd;
          z-index: 6;
          px2px(top, 5px);
          px2px(bottom, 0px);
          px2px(right, 0px);

          >*
            px2px(font-size, 50px);
        .comment
          position: absolute;
          width: 100%;
          height: 100%;
          color: #fff;
          background: #12B7F5;
          border: 0 none;
          z-index: 6;
          px2px(font-size, 34px);
      &.box-send
        margin-left: 20px;
        color: #fff;
        background: #12B7F5;

    .more-choice {
      position: absolute;
      padding: 10px;
      width: 180px;
      height: auto;
      background: #fff;
      z-index: 7;
      border: 1px solid #D0F1FD;
      px2px(left, 10px);
      px2px(bottom, 125px);

      button {
        width: 100%;
        height: 80px;
        border: 0 none;
        background: #fff;
        color: #3C4A55;
        border-bottom: 1px solid #E6EAF2
        px2px(font-size, 30px);
        &:last-child {
          border: 0 none;
        }
      }
      &:after {
        position: absolute;
        width: 18px;
        height: 18px;
        background: #fff;
        content: '';
        z-index: 5;
        transform:rotate(45deg);
        -webkit-transform:rotate(45deg);
        px2px(bottom, -10px);
        px2px(left, 50px);
      }
    }

.modal-dialog
  position: absolute;
  left: 0;
  right: 0;
  height: 500px;
  background: rgba(0,0,0,50);
  z-index: 10;
  px2px(font-size, 50px);
  px2px(top, -420px);
  px2px(bottom, 0px);

  input[type="file"], .upload
    px2px(font-size, 32px);

  .progress
    display: inline-block;
    width: 300px;
    height: 10px;
    background: #fff;
    vertical-align: middle;
    font-size: 0px;

    em
     display: inline-block;
     height: 100%;
     background: greenyellow;

.is-pc .l-chatbox {
  position: absolute;
  top: 631px;
  bottom: initial;
  padding: 10px;
  width: 572px;
  height: 30px;
  box-shadow: none;
  background: #fff;

  .box {
    margin: 0 auto;
    max-width: 1600px;

    > * {
      height: 30px;
      &.box-more {
        margin-left: 0;
        button {
          width: 60px;
          border-radius: 6px;
          -webkit-border-radius: 6px;
        }
      }
      &.box-msg {
        textarea, input {
          padding: 8px 0 0 10px;
          height: 18px;
          line-height: 1;
          outline:none;
        }
        .reorder {
          top: 1px;
        }
      }
      &.more-choice {
        left: 20px;
        padding: 5px;
        width: 100px;
        height: 100px;

        &.is-free {
          height: 50px;
        }
        button {
          border-top: 1px solid #fff;
          height: 49px;
        }
        .close {
          position: absolute;
          right: 0;
          top: 0;
          font-size: 20px;
          color: #03a9f4;
          text-decoration: none;

          &:hover {
            color: greenyellow;
          }
        }
      }
    }
  }
  .modal-dialog {
    left: 140px;
    top: -430px;
    padding: 20px;
    width: 420px;
    height: 420px;
    color: #fff;
    background: #12b7f5;

    .modal-header {
      padding-bottom: 16px;
      font-size: 16px;
      text-align: center;
    }
    .modal-body {
      font-size: 14px;
      .modal-img {
        height: 100px;
      }
      input {
        border: 0 none;
        font-size: 14px;
      }
      button {
        border: 0 none;
        background: #fff;
      }
      img {
        max-height: 225px;
      }
    }
  }

  &.owner {
    top: 555px;
    padding: 10px 14px;
    width: 548px;
    height: 110px;

    .box {
      position: relative;
      display: block;
      .box-msg {
        height: auto;
        overflow: hidden;

        textarea {
          height: 60px;
        }
      }
      .more-choice {
        left: 10px;
        bottom: 20px;
        &:after {
          display: none;
        }
      }
      .box-more, .box-send {
        position: absolute;
        top: 85px;

        &.box-send{
          top: 81px;
          right: 0;
          padding: 4px 10px;
          height: auto;
          font-size: 14px;
          border-radius: 14px;
          -webkit-border-radius: 14px;
          cursor: pointer;
        }
      }
      .box-more {
        top: 82px;
        &.recorder {
          left: 32px;
        }
        .iconfont {
          display: inline-block;
          font-size: 24px;
          overflow: hidden;
          input {
            position: absolute;
            left: 0;
            top: 0;
            color: #fff;
            width: 24px;
            height: 24px;
            opacity: 0;
            overflow: hidden;
          }
        }
      }
    }
    .modal-dialog {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      display: flex;
      -webkit-display: flex;
      align-items:center;
      justify-content: center;
      background-color: rgba(0,0,0,.3);
      .modal-body {
        position: relative;
        width: 310px;
        height: auto;
        button {
          cursor: pointer;
          &.cancle {
            position: absolute;
            top: -7px;
            right: -7px;
            padding: 6px;
            line-height: 1;
            color: #fff;
            background: #000;
            border-radius: 15px;
            -webkit-border-radius: 15px;
            z-index: 4;
            .icon-guanbi {
              font-size: 14px;
            }
          }
        }
        .modal-preview {
          position: relative;
          margin: 0;
          width: 100%;
          height: 160px;
          background: #12b7f5;
          text-align: center;
          border-radius: 4px 4px 0 0;
          -webkit-border-radius: 4px 4px 0 0;
          .icon-icons01 {
            display: inline-block;
            margin-top: 60px;
            font-size: 30px;
          }
          input[type="file"] {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 3;
            -moz-opacity: 0;
            -khtml-opacity: 0;
            -webkit-opacity: 0;
            opacity: 0;
          }
        }
        .modal-img {
          height: auto;
          .preview {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            img {
              max-width: 100%;
              min-height: 100%;
              max-height: 100%;
            }
          }
        }
        .upload {
          display: block;
          padding: 10px 0;
          width: 100%;
          line-height: 1;
          color: #12b7f5;
          text-align: center;
        }
        .progress {
          position: relative;
          width: 310px;
          height: 2px;
          vertical-align: top;
        }
      }
    }
  }
  &.is-finish {
    top: 630px;
    height: 30px;
  }
  .cursor {
    cursor: pointer;
  }
}

@import '~@lib/css/index.styl';

.content
  padding: 0;
  px2px(font-size, 32px);

  &.detail
    padding-bottom: 100px;
    .detail-img
      width: 100%;
      height: 420px;
      background: #fff;
      overflow: hidden;
      img
        width: 100%;
        height: 420px;
    .tab
      display: -webkit-box;
      display: box;
      height: 88px;
      background: #fff;
      border-bottom: 1px solid #e6eaf2;
      px2px(line-height, 88px);
      >*
        display: -webkit-box;
        display: box;
        -webkit-box-flex: 1;
        box-flex: 1;
        margin: 0 40px;
        justify-content: center;
        text-decoration: none;
        color: #3c4a55;
        border-bottom: 1px solid #fff;
        &.active
          color: #12b7f5;
          border-color: #12b7f5;
    .brief-info
      padding: 0 30px;
      background: #fff;

      h4
        margin: 0;
        padding: 35px 0;
        px2px(font-size, 36px);
      .info-detail
        display: -webkit-box;
        display: box;
        padding-bottom: 36px;
        border-bottom: 1px solid #e6eaf2;
        px2px(font-size, 30px);
        >*
          display: -webkit-box;
          display: box;
          color: #9CA7C1;
          -webkit-box-flex: 1;
          box-flex: 1;
          justify-content: center;
      .info-price
        position: relative;
        margin: 0;
        padding: 40px 0;
        .price
          color: #FB6666;
          px2px(font-size, 42px);
          em
            color: #9CA7C1;
            text-decoration:line-through;
            px2px(font-size, 32px);
        .guarantee
          position: absolute;
          right: 0;
          padding: 12px 18px;
          background: #f7f9fc;
          border-radius: 50px;
          -webkit-border-radius: 50px;
          color: #12B7F5;
          px2px(top, 28px);
          &:after
            position: relative;
            margin-top: -12px;
            margin-left: 15px;
            content: '';
            display: inline-block;
            width: 10px;
            height: 10px;
            vertical-align: middle;
            border-right: 4px solid #12B7F5;
            border-top: 4px solid #12B7F5;
            -webkit-transform: rotate(135deg); /*箭头方向可以自由切换角度*/
            transform: rotate(135deg);
    .lesson-brief
      margin-top: 20px;
      padding: 30px 30px 0;
      background: #fff;
      .brief-title
        color: #3c4a55;
        px2px(font-size, 42px);
      .brief-con
        border-bottom: 1px solid #e6eaf2;
      p
        margin: 0;
        padding: 30px 0;
        color: #70788c;
    em
      color: #12B7F5;
      font-style: normal;
    .title
      padding: 10px;
    button
      px2px(font-size, 28px);


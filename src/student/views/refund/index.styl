@import '~@lib/css/index.styl';

.refund
  padding: 0;
  .refund-info
    margin: 15px 0 0;
    padding: 30px;
    background: #fff;
    dl
      margin: 12px 0;
      overflow: hidden;
      dt, dd
        float: left;
      dt
        color: #9CA7C1;
      dd
        width: 570px;
        white-space: nowrap;
        &.price
          color: #FB6666;
  .refund-reason
    p
     padding: 0 30px;
    .textarea
      padding: 15px 30px;
      background: #fff;
      textarea
        width: 100%;
        height: 340px;
        border: 0 none;
        px2px(font-size, 32px);
      p
        margin: 0;
        padding: 0;
        color: #9CA7C1;
        text-align: right;
        outline: none;
